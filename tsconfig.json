{
  "compilerOptions": {
    "jsx": "react",
    "esModuleInterop": true,
    "baseUrl": "./src",
    "moduleResolution": "node",
    "isolatedModules": true,
    "noImplicitAny": true,
    "declaration": true,
    "paths": {
      "@common/*": ["./src/common/*"],
      "@common": ["./src/common"],
      "@constants/*": ["./src/constants/*"],
      "@constants": ["./src/constants"],
      "@contexts/*": ["./src/contexts/*"],
      "@contexts": ["./src/contexts"],
      "@hooks/*": ["./src/hooks/*"],
      "@hooks": ["./src/hooks"],
      "@styles/*": ["./src/styles/*"],
      "@utilities/*": ["./src/utilities/*"]
    }
  },
  "include": ["./**/*.ts", "./**/*.tsx"]
}
